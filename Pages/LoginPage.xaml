<Page x:Class="prak12.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak12.Pages"
      xmlns:valid="clr-namespace:prak12.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel Style="{StaticResource FormStackPanel}">
        <Label Content="Вход" Style="{DynamicResource TopLabel}"/>

        <StackPanel Style="{StaticResource InputStackPanel}">
            <Label Content="ID" Style="{DynamicResource BasedLabel}"/>
            <TextBox x:Name="login" Style="{DynamicResource NeonTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="LoginId" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=login, Path=(Validation.Errors)}" Style="{DynamicResource ErrorValidationStyle}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Style="{StaticResource InputStackPanel}">
            <Label Content="Пароль" Style="{DynamicResource BasedLabel}"/>
            <TextBox x:Name="password" Style="{DynamicResource NeonTextBoxStyle}">
                <TextBox.Text>
                    <Binding Path="LoginPassword" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl ItemsSource="{Binding ElementName=password, Path=(Validation.Errors)}" Style="{DynamicResource ErrorValidationStyle}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Button Content="Войти" Click="Login_Click" Style="{DynamicResource StandardButtonStyle}"/>
    </StackPanel>
</Page>
