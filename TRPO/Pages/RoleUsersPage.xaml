<Page x:Class="TRPO.Pages.RoleUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoleUsersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <StackPanel>
            <TextBlock x:Name="RoleTitle"/>
            <TextBlock x:Name="UsersCount"/>
        </StackPanel>



        <ListView Grid.Row="1" x:Name="UsersListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                                <Run Text="ID:" />
                                <Run Text="{Binding ID}"/>
                        </TextBlock>
                        <TextBlock>
                                <Run Text="Имя:" />
                                <Run Text="{Binding Name}"/>
                        </TextBlock>
                        <TextBlock>
                                <Run Text="Логин:" />
                                <Run Text="{Binding Login}"/>
                        </TextBlock>
                        <TextBlock>
                                <Run Text="Email:" />
                                <Run Text="{Binding Email}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Button Content="Назад" Click="Back_Click" />
        </StackPanel>
    </Grid>
</Page>
