<Page x:Class="TRPO.Pages.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="Группы по интересам"/>
            <ListView ItemsSource="{Binding InterestGroupService.InterestGroups}"
                      SelectedItem="{Binding SelectedGroup}"
                      MouseDoubleClick="GroupList_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Участников: "/>
                                    <TextBlock Text="{Binding UserInterestGroups.Count}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


        
        <StackPanel Grid.Column="1" Grid.Row="0">
            <Label Content="Группы пользователя" />
            <TextBlock Text="{Binding SelectedUser.Name, StringFormat='Пользователь: {0}'}"
                       />

            <ListView ItemsSource="{Binding SelectedUser.UserInterestGroups}"
                      Height="200" ScrollViewer.VerticalScrollBarVisibility="Auto"
                      MouseDoubleClick="UserGroupsList_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border >
                            <StackPanel>
                                <TextBlock Text="{Binding InterestGroup.Title}" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Статус: "/>
                                    <TextBlock Text="{Binding IsModerator, Converter={StaticResource BoolToStringConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Дата: "/>
                                    <TextBlock Text="{Binding JoinedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить группу" Click="AddGroup_Click"/>
            <Button Content="Редактировать" Click="EditGroup_Click"/>
            <Button Content="Удалить" Click="DeleteGroup_Click" />
            <Button Content="Добавить участника" Click="AddMember_Click" />
            <Button Content="Назад" Click="Back_Click" />
        </StackPanel>
    </Grid>
</Page>
