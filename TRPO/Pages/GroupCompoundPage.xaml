<Page x:Class="TRPO.Pages.GroupCompoundPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupCompoundPage">

    <Grid>
        <StackPanel Grid.Column="1" Grid.Row="0">
    <Label Content="Участники группы"/>
    <TextBlock Text="{Binding SelectedGroup.Title, StringFormat='Группа: {0}'}"/>

    <ListView ItemsSource="{Binding SelectedGroup.UserInterestGroups}"
              
             ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border >
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding User.Name}"/>
                            <TextBlock Text="{Binding User.Login}"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Статус: "/>
                                <TextBlock Text="{Binding IsModerator, Converter={StaticResource BoolToStringConverter}}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата: "/>
                                <TextBlock Text="{Binding JoinedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                            </StackPanel>
                        </StackPanel>


                        <Button DockPanel.Dock="Right" 
                                Content="Удалить" 
                                Click="RemoveMember_Click" Width="150"/>
                    </DockPanel>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Click="Button_Click" Content="Назад"/>
        </StackPanel>
    </Grid>
</Page>
