<Application x:Class="TRPO.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TRPO"
             xmlns:materialDesin="http://materialdesigninxaml.net/winfx/xaml/themes"
              xmlns:converter="clr-namespace:TRPO.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
       
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <materialDesin:BundledTheme BaseTheme="Light" SecondaryColor="DeepOrange" PrimaryColor="Indigo"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="/Styles/UI.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:BoolToStringConverter x:Key="BoolToStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
